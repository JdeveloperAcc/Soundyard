@using Club.Soundyard.Web.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";

    string cssClass = "btn btn-primary";
    if (ViewBag.errorMessage != "external")
    {
        cssClass += " disabled";
    }
}

<section id="loginForm">
    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>Use @(ViewBag.Message) account to log in.</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "col-md-2 col-form-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control w-50" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "col-md-2 col-form-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control w-50" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Log in" class="btn btn-outline-secondary" />
            </div>
        </div>
        <hr />
        <h4>Use another service to log in.</h4>
        <div class="form-group">
            <div class="col-md-10">
                <p><a class="@cssClass" href="/Account/ExternalLogin">FB Auth &raquo;</a></p>
            </div>
        </div>
    }
</section>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}